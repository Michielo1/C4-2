<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!--suppress ALL -->
<BorderPane fx:id="deleteAccountBorderPane"  prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hhs4a.project2.c42.scenecontrollers.DeleteAccountScreenController">
   <center>
      <VBox alignment="CENTER" maxHeight="600.0" maxWidth="400.0" spacing="20.0" BorderPane.alignment="CENTER">
         <VBox alignment="CENTER">
            <Text fx:id="accountDeleteScreenHeaderText" text="Account verwijderen" textAlignment="CENTER">
               <font>
                  <Font name="Impact" size="40.0"/>
               </font>
            </Text>
            <Text fx:id="accountVerwijderenLabel" wrappingWidth="600" text="Door op de onderstaande knop te klikken, wordt het geselecteerde account definitief verwijderd en kunnen alle gegevens niet worden hersteld." textAlignment="CENTER" />
         </VBox>
         <MFXPasswordField fx:id="passwordField" floatMode="DISABLED" minHeight="40.0" minWidth="230.0" promptText="Bevestigingswachtwoord" />
         <MFXButton fx:id="deleteAccountButton" buttonType="RAISED" defaultButton="true" minHeight="40.0" minWidth="160.0" onAction="#onDeleteAccountButtonClick" text="Account verwijderen" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="Impact" size="14.0"/>
            </font>
         </MFXButton>
      </VBox>
   </center>
